{
    "name": "ai-service",
    "version": "1.0.0",
    "main": "build/app.js",
    "scripts": {
        "start": "tsc && nodemon --exec \"node --max-old-space-size=2048\" build/app.js",
        "test": "jest --coverage"
    },
    "dependencies": {
        "amqplib": "^0.10.7",
        "axios": "^1.8.4",
        "axios-retry": "^4.5.0",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.5.0",
        "express": "^4.21.2",
        "express-fileupload": "^1.5.1",
        "jest": "^29.7.0",
        "mammoth": "^1.9.0",
        "pdf-parse": "^1.1.1",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/amqplib": "^0.10.7",
        "@types/cors": "^2.8.18",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^5.0.1",
        "@types/express-fileupload": "^1.5.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "@types/pdf-parse": "^1.1.5",
        "nodemon": "^3.1.9",
        "ts-jest": "^29.3.2",
        "typescript": "^5.8.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(test|spec)\\.ts$",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "testEnvironmentOptions": {
            "legacyFakeTimers": true
        },
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "coverageDirectory": "./coverage/",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/__tests__/"
        ]
    }
}
