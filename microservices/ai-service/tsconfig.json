{
  "compilerOptions": {
    "target": "ES6",            
    "module": "commonjs",      
    "outDir": "./build",        
    "rootDir": "./src",        
    "esModuleInterop": true,
    "strict": true, 
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }           
  },
  "include": [
    "src/**/*.ts"               
  ],
  "exclude": [
    "node_modules"              
  ]
}
