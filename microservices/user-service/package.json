{
    "name": "user-service",
    "version": "1.0.0",
    "main": "build/app.js",
    "scripts": {
        "start": "tsc && nodemon --exec \"node --max-old-space-size=2048\" build/app.js",
        "test": "jest --coverage --coverageDirectory=coverage"
    },
    "dependencies": {
        "amqplib": "^0.10.8",
        "cors": "^2.8.5",
        "crypto-js": "^4.2.0",
        "dotenv": "^16.4.7",
        "express": "^4.17.1",
        "mongodb": "^6.15.0",
        "mongoose": "^8.12.2",
        "nodemon": "^3.1.9",
        "uuid": "^11.1.0",
        "whatwg-url": "14.2.0"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.27.0",
        "@tsconfig/node20": "^20.1.5",
        "@types/amqplib": "^0.10.7",
        "@types/cors": "^2.8.18",
        "@types/crypto-js": "^4.2.2",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "jest": "^29.7.0",
        "mongoose-mock": "^0.4.0",
        "supertest": "^7.1.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(test|spec)\\.ts$",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "testEnvironmentOptions": {
            "legacyFakeTimers": true
        },
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "coverageDirectory": "./coverage/",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/__tests__/"
        ]
    }
}
