{
    "name": "cv-review-service",
    "version": "1.0.0",
    "main": "build/app.js",
    "scripts": {
        "start": "tsc && nodemon --exec \"node --max-old-space-size=2048\" build/app.js",
        "test": "jest --coverage --coverageDirectory=coverage"
    },
    "dependencies": {
        "axios": "^1.8.2",
        "express": "^4.17.1",
        "nodemon": "^3.1.9",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@types/cors": "^2.8.18",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.13.10",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>"
        ],
        "testRegex": "(test|spec)\\.ts$",
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "testEnvironmentOptions": {
            "legacyFakeTimers": true
        },
        "coverageReporters": [
            "json-summary",
            "text",
            "lcov"
        ],
        "coverageDirectory": "./coverage/",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/__tests__/"
        ]
    }
}
